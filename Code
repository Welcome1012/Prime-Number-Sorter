def is_prime(num):
    if num <= 1:
        return False
    for i in range(2, num):
        if num % i == 0:
            return False
    return True

while True:
    user_input = input("Prime number checker(or 'q' to quit): ")
    if user_input.lower() == 'q':
        print("Goodbye!")
        break
    try:
        number = int(user_input)
        if is_prime(number):
            print(f"{number} is a prime number.")
        else:
            print(f"{number} is not a prime number.")
    except ValueError:
        print("Please enter a valid integer(whole number).")
